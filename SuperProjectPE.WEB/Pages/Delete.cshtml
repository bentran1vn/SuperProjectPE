@page
@model SuperProjectPE.WEB.Pages.Delete

@{
    Layout = "Shared/_Layout";
}

<h1>Delete Silver Jewelry</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this jewelry?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Jewelry.SilverJewelryId</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Jewelry.SilverJewelryName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Jewelry.SilverJewelryDescription</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Jewelry.Price.ToString("C")</dd>

        <dt class="col-sm-3">Metal Weight</dt>
        <dd class="col-sm-9">@Model.Jewelry.MetalWeight</dd>

        <dt class="col-sm-3">Production Year</dt>
        <dd class="col-sm-9">@Model.Jewelry.ProductionYear</dd>

        <dt class="col-sm-3">Category ID</dt>
        <dd class="col-sm-9">@Model.Jewelry.CategoryId</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Jewelry.SilverJewelryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>